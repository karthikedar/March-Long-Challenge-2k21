#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	string s;
	long long l,c;
	getline(cin,s);
	while(t--)
	{
	    
	    c=0;
	    getline(cin,s);
	    l= s.length();
	    //cout<<l;
	     if(s[0]=='1')
	           c=1;
	    for(long long i=1;i<l;i++)
	    {
	       if(s[i-1]== '0' && s[i]=='1')
	           c++;
	    }
	    cout<<c<<endl;
	}
	return 0;
}
